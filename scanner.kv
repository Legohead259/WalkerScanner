<FeedbackBox>:
    height: 250
    width: 250
    y: 100

    canvas.before:
        Color:
            rgba: self.active_color
        Rectangle:
            pos: self.pos
            size: self.size
<UPCInput>:
    height: 50
    size_hint: (1, None)
    y: 50
    hint_text: "UPC"
    multiline: False
<PublishButton>:
    height: 50
    size_hint: (1, None)
    y: 0
    text: "Publish"
<ResetButton>:
    text: "Reset"
<DataBox>:
    multiline: False
<FormatDropDown>:
    FormatButton:
        id: DVD
<ButtonBar>:
    rows: 1
    cols: 3
<Base>:
    id: base
    rows: 1
    cols: 2
    FloatLayout:
        id: left
        FeedbackBox:
            id: feedback
        UPCInput:
            id: input
            on_text_validate: self.get_movie()
        PublishButton:
            id: publish
            on_press:
                self.publish()
    GridLayout:
        id: right
        rows: 10
        cols: 1
        DataBox:
            id: Title
            hint_text: "Title"
            on_text_validate: self.update_title()
        DataBox:
            id: Genre
            hint_text: "Genre(s)"
            on_text_validate: self.update_genre()
        DataBox:
            id: Rated
            hint_text: "Rating"
            on_text_validate: self.update_rating()
        DataBox:
            id: Type
            hint_text: "Type (4K, BR, etc.)"
            on_text_validate: self.update_type()
        DataBox:
            id: Format
            hint_text: "Format (Widescreen, Fullscreen, etc."
            on_text_validate: self.update_format()
        DataBox:
            id: Year
            hint_text: "Year"
            on_text_validate: self.update_year()
        DataBox:
            id: Runtime
            hint_text: "Runtime"
            on_text_validate: self.update_runtime()
        DataBox:
            id: Plot
            hint_text: "Plot summary"
            on_text_validate: self.update_plot()
        DataBox:
            id: Metascore
            hint_text: "Metascore"
            on_text_validate: self.update_reviews()
        ResetButton:
            on_press: root.reset()