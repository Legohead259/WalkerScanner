<FeedbackBox>:
    height: 250
    width: 250
    y: 100

    canvas.before:
        Color:
            rgba: self.active_color
        Rectangle:
            pos: self.pos
            size: self.size
<UPCInput>:
    height: 50
    size_hint: (1, None)
    y: 50
    hint_text: "UPC"
<PublishButton>:
    height: 50
    size_hint: (1, None)
    y: 0
    text: "Publish"
<ResetButton>:
    text: "Reset"
<DataBox>:
    multiline: False
<HelpButton>:
    text: "Help"
<ButtonBar>:
    rows: 1
    cols: 3
<Base>:
    id: base
    rows: 1
    cols: 2
    FloatLayout:
        id: left
        FeedbackBox:
            id: feedback
        UPCInput:
            id: input
        PublishButton:
            id: publish
            on_press:
                root.reset()
    GridLayout:
        id: right
        rows: 9
        cols: 1
        DataBox:
            id: title
            hint_text: "Title"
            on_text_validate: self.update_title()
        DataBox:
            id: genre
            hint_text: "Genre(s)"
        DataBox:
            id: rating
            hint_text: "Rating"
        DataBox:
            id: format
            hint_text: "Format"
        DataBox:
            id: year
            hint_text: "Year"
        DataBox:
            id: runtime
            hint_text: "Runtime"
        DataBox:
            id: plot
            hint_text: "Plot summary"
        DataBox:
            id: reviews
            hint_text: "Reviews"
        ButtonBar:
            HelpButton:
            ResetButton:
                on_press: root.reset()