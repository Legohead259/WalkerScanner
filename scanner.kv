<FeedbackBox>:
    height: 250
    width: 250
    y: 100

    canvas.before:
        Color:
            rgba: self.active_color
        Rectangle:
            pos: self.pos
            size: self.size
<UPCInput>:
    height: 50
    size_hint: (1, None)
    y: 50
    hint_text: "UPC"
    multiline: False
<PublishButton>:
    height: 50
    size_hint: (1, None)
    y: 0
    text: "Publish"
<ResetButton>:
    text: "Reset"
<DataBox>:
    multiline: False
<ButtonBar>:
    rows: 1
    cols: 3
<Base>:
    id: base
    rows: 1
    cols: 2
    FloatLayout:
        id: left
        FeedbackBox:
            id: feedback
        UPCInput:
            id: input
            on_text_validate: self.get_movie()
        PublishButton:
            id: publish
            on_press:
                self.publish()
                root.reset()
    GridLayout:
        id: right
        rows: 9
        cols: 1
        DataBox:
            id: Title
            hint_text: "Title"
            on_text_validate: self.update_title()
        DataBox:
            id: Genre
            hint_text: "Genre(s)"
        DataBox:
            id: Rated
            hint_text: "Rating"
        DataBox:
            id: Format
            hint_text: "Format"
        DataBox:
            id: Year
            hint_text: "Year"
        DataBox:
            id: Runtime
            hint_text: "Runtime"
        DataBox:
            id: Plot
            hint_text: "Plot summary"
        DataBox:
            id: Metascore
            hint_text: "Metascore"
        ResetButton:
            on_press: root.reset()