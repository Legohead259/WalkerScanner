<FeedbackBox>:
    height: 250
    width: 250
    y: 100

    canvas.before:
        Color:
            rgba: self.active_color
        Rectangle:
            pos: self.pos
            size: self.size
<UPCInput>:
    height: 50
    size_hint: (1, None)
    y: 50
    hint_text: "UPC"
<PublishButton>:
    height: 50
    size_hint: (0.5, None)
    y: 0
    text: "Publish"
<UpdateButton>:
    height: 50
    size_hint: (0.5, None)
    x: 125
    text: "Update"
<DataBox>:
    multiline: False
<ModeButton>:
    background_down: ""
    background_normal: ""
    background_disabled_down: ""
    background_disabled_normal: ""
<HelpButton>:
    text: "Help"
<ButtonBar>:
    rows: 1
    cols: 3
<Base>:
    id: base
    rows: 1
    cols: 2
    FloatLayout:
        id: left
        FeedbackBox:
            id: feedback
        UPCInput:
            id: input
        PublishButton:
            id: publish
            on_press:
                root.reset()
        UpdateButton:
            id: update
            on_press:
    GridLayout:
        id: right
        rows: 9
        cols: 1
        DataBox:
            id: title
            hint_text: "Title"
            on_text_validate: self.update_title()
        DataBox:
            id: genre
            hint_text: "Genre(s)"
        DataBox:
            id: rating
            hint_text: "Rating"
        DataBox:
            id: format
            hint_text: "Format"
        DataBox:
            id: year
            hint_text: "Year"
        DataBox:
            id: runtime
            hint_text: "Runtime"
        DataBox:
            id: plot
            hint_text: "Plot summary"
        DataBox:
            id: reviews
            hint_text: "Reviews"
        ButtonBar:
            ModeButton:
                id: auto
                text: "Auto"
                background_color: self._enabled_color
                on_press: self.change_colors(manual)
            HelpButton:
            ModeButton:
                id: manual
                text: "Manual"
                background_color: self._disabled_color
                on_press: self.change_colors(auto)